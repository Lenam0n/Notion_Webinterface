{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@controller/*": ["src/controllers/*"],
      "@route/*": ["src/routes/*"],
      "@service/*": ["src/services/*"],
      "@util/*": ["src/utils/*"],
      "@config": ["src/env"]
    }
  },
  "include": ["src"]
}
