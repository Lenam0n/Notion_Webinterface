{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "baseUrl": ".",
    "paths": {
      "@interface/*": ["src/interfaces/*"],
      "@template/*": ["src/templates/*"],
      "@template~ps/*": ["src/templates/photoshop/*"],
      "@template~id/*": ["src/templates/indesign/*"],
      "@factory/*": ["src/factory/*"],
      "@processor/*": ["src/processor/*"],
      "@data/*": ["src/data/*"],
      "@util/*": ["src/utils/*"],
      "@error/*": ["src/errors/*"],
      "@config": ["src/config.ts"]
    },

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src", "src/*"],
  "exclude": ["node_modules", "dist"]
}
