{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@interface/*": ["src/interfaces/*"],
      "@client/*": ["src/clients/*"],
      "@template/*": ["src/templates/*"],
      "@template~ps/*": ["src/templates/photoshop/*"],
      "@template~id/*": ["src/templates/indesign/*"],
      "@factory/*": ["src/factory/*"],
      "@processor/*": ["src/processor/*"],
      "@data/*": ["src/data/*"],
      "@util/*": ["src/utils/*"],
      "@error/*": ["src/errors/*"],
      "@config": ["src/config.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
